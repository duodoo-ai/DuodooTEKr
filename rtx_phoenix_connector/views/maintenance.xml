<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_equipment_form_view_3" model="ir.ui.view">
            <field name="name">maintenance.equipment.form.inherit</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="rtx_maintenance.view_equipment_form_view_2"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='product_information']" position="before">
                   <page string="测点数据" name="point_data">
                        <field name="point_ids" readonly="1">
                            <!-- 这里可以定义 One2many 字段的视图布局 -->
                            <list>
                                <field name="MachineID"/>
                                <field name="PointID"/>
                                <field name="name"/>
                                <field name="monitor_date"/>
                                <field name="speed"/>
                                <field name="process"/>
                                <field name="digit"/>
                                <field name="unit"/>
                                <field name="total"/>
                                <field name="collection_date"/>
                                <!-- 可以添加其他字段 -->
                            </list>
                            <form>
                                <group>
                                    <field name="MachineID"/>
                                    <field name="PointID"/>
                                    <field name="name"/>
                                    <field name="monitor_date"/>
                                    <field name="speed"/>
                                    <field name="process"/>
                                    <field name="digit"/>
                                    <field name="unit"/>
                                    <field name="total"/>
                                    <field name="collection_date"/>
                                    <!-- 可以添加其他字段 -->
                                </group>
                            </form>a
                        </field>
                    </page>
	            </xpath>
                <xpath expr="//notebook/page[@name='maintenance']" position="after">
                   <page string="报警域值" name="maintenance_alarm">
                        <group>
                            <group>
                                <field name="alarm_origin"/>
                                <field name="high_alarm"/>
                                <field name="lower_warning"/>
                            </group>
                        </group>
                    </page>
	            </xpath>
            </field>
        </record>

        <record id="view_equipment_list_view_inherit_3" model="ir.ui.view">
            <field name="name">maintenance.equipment.list.inherit</field>
            <field name="model">maintenance.equipment</field>
            <field name="inherit_id" ref="rtx_maintenance.view_equipment_list_view_inherit_2"/>
            <field name="arch" type="xml">
		    	<xpath expr="//field[@name='category_id']" position="after">
                    <field name="alarm_origin" optional="show"/>
                    <field name="lower_warning" optional="show"/>
                    <field name="high_alarm" optional="show"/>
	            </xpath>
            </field>
        </record>

        <record id="view_equipment_request_list_view_3" model="ir.ui.view">
            <field name="name">maintenance.request.list.inherit</field>
            <field name="model">maintenance.request</field>
            <field name="inherit_id" ref="maintenance.hr_equipment_request_view_tree"/>
            <field name="arch" type="xml">
		    	<xpath expr="//field[@name='name']" position="after">
		    		<field name="maintenance_type"/>
	            </xpath>
            </field>
        </record>
    </data>
</odoo>